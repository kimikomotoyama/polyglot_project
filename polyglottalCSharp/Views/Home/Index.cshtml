@{
    ViewData["Title"] = "Polyglottal project";
    var compliments = ViewData["Compliments"] as List<string>;
    var compliment = ViewData["ComplimentFromAPI"];
}

<div class="row">
    <div class="col-md-12">
        <h2 class="title">Fish Compliments</h2>
        <div class="input">
            @*<form asp-controller="api" asp-action="values" method="post">*@
            <form>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label" for="Name">Name:</label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control" name="name" for="name" />
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label" for="Gender">Gender:</label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control" name="gender" for="gender" /><br />
                    </div>
                </div>
                <div class="container">
                    <div class="row justify-content-center">
                        <button type="submit" class="btn btn-primary col-4">GO!</button>
                    </div>
                </div>
            </form>
        </div>
        <div class="compliments row">
            <div class="col-md-3">
                <img src="~/images/goodjob.gif"
                     asp-append-version="true" />
            </div>
            <div class="col-md-3">
                <div class="each-bubble row">
                    <div class="speech-bubble tracking-in-expand">
                        @ViewData["Message"], you are: @ViewData["Gender"]
                    </div>
                </div>
                @foreach (string element in compliments)
                {
                    <div class="each-bubble row">
                        <div class="speech-bubble tracking-in-expand">
                            @element
                        </div>
                    </div>
                }
                <div class="each-bubble row">
                    <div class="speech-bubble tracking-in-expand">
                        @compliment
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
    </div>
</div>
